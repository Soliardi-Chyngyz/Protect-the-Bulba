        <item name="layout_constraintTop_toBottomOf">@id/up</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:src">@drawable/ic_left</item>
    </style>
    <style name="NavStyleRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">76dp</item>
