        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/left</item>
        <item name="android:src">@drawable/ic_down</item>
    </style>
    <style name="NavStyleFire">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">130dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:src">@drawable/ic_fire</item>
