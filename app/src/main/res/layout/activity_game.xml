<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GameActivity">

    <com.portfolio.protect_the_cockroach.game.GameField
        android:id="@+id/game_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="24dp" />

    <ImageView
        android:id="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_menu"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/score"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:text="@string/score_0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/up"
        style="@style/NavigationStyleUp"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/left"
        style="@style/NavStyleLeft"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/right"
        style="@style/NavStyleRight"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/down"
        style="@style/NavStyleDown"
        tools:ignore="ContentDescription,MissingConstraints"
        />

    <ImageView
        android:id="@+id/fire"
        style="@style/NavStyleFire"
        tools:ignore="ContentDescription,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>