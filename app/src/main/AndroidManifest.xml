<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.portfolio.protect_the_cockroach">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_potato"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_potato"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoTanks"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.splash.MineSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.splash.SplashActivity"/>
        <activity android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name=".ui.GameActivity"
            android:screenOrientation="userLandscape"/>
    </application>
</manifest>